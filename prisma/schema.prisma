datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  role     UserRole
  bookings Booking[]
}

model Train {
  id          Int       @id @default(autoincrement())
  name        String
  source      String
  destination String
  totalSeats  Int
  bookings    Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  trainId   Int
  train     Train    @relation(fields: [trainId], references: [id])
  seatNumber Int
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}